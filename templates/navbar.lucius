.hover-dropdown-content {
    display: none;
    position: absolute;
    top: 48px;
    left: 0;
    width: 100%;
}

.dropdown-toggle::after {
    display: none;
}

.nav-item {
    padding: 0 2rem;
}

@media (min-width: 992px) {
    .hover-dropdown:hover .hover-dropdown-content {
        display: block;
        z-index: 5;
    }

    .dropdown-toggle::after {
        display: inline-block;
    }
}
